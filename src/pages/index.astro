---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import profilePicture from '../assets/profilePicture.jpeg'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Java', 'JavaScript', 'Python', 'TypeScript', 'Rust', 'Go']
const frontend = ['React', 'Astro', 'Next.js', 'Svelte', 'Angular', 'Veu']
const backend = ['Node.js', 'Bun.js', 'Nginx', 'Docker']
const others = ['Linux', 'Git', 'Digital Ocean', 'Vim']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<div class="relative group">
				<div class="absolute inset-0 rounded-full bg-gradient-to-r from-white/5 to-green-500/5 blur-lg group-hover:blur-xl transition-all duration-500"></div>
				<Image
					src={profilePicture}
					alt='profile photo'
					class='relative h-28 w-auto rounded-full bg-white p-1 shadow-[0_0_20px_rgba(34,197,94,0.2)] group-hover:shadow-[0_0_30px_rgba(34,197,94,0.3)] transition-all duration-500'
					loading='eager'
				/>
			</div>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Nilesh Kumar</h1>
				<a
					href='https://github.com/knileshh'
					class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
				>
					<span class='relative flex items-center justify-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>

					<p class='font-medium'>Building</p>
				</a>
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label title="MCA'26 VIT Vellore">
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 50 50' preserveAspectRatio='xMidYMid meet' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M 25.037109 2 A 1.0001 1.0001 0 0 0 24.576172 2.09375 L 2.5761719 12.380859 A 1.0001 1.0001 0 0 0 2 13.285156 L 2 15 A 1.0001 1.0001 0 0 0 3 16 L 5 16 C 5 17.29975 5.8348345 18.43211 7 18.833984 L 7 37.150391 C 5.8280314 37.539726 5 38.695112 5 40 L 5 41 L 4.8457031 41 C 3.2400822 41 2 42.397208 2 44 L 2 47 L 48 47 L 48 44 C 48 42.397208 46.759918 41 45.154297 41 L 45 41 L 45 40 C 45 38.695112 44.171969 37.539726 43 37.150391 L 43 18.833984 C 44.165166 18.43211 45 17.29975 45 16 L 47 16 A 1.0001 1.0001 0 0 0 48 15 L 48 13.285156 A 1.0001 1.0001 0 0 0 47.423828 12.380859 L 25.423828 2.09375 A 1.0001 1.0001 0 0 0 25.037109 2 z M 25 4.1035156 L 46 13.921875 L 46 14 L 4 14 L 4 13.921875 L 25 4.1035156 z M 7 16 L 43 16 C 43 16.5883 42.580604 17 42.091797 17 L 22 17 L 18 17 L 7.9082031 17 C 7.4193959 17 7 16.5883 7 16 z M 9 19 L 11 19 L 11 37 L 9 37 L 9 19 z M 13 19 L 17 19 L 17 37 L 13 37 L 13 19 z M 19 19 L 21 19 L 21 37 L 19 37 L 19 19 z M 23 19 L 27 19 L 27 37 L 23 37 L 23 19 z M 29 19 L 31 19 L 31 37 L 29 37 L 29 19 z M 33 19 L 37 19 L 37 37 L 33 37 L 33 19 z M 39 19 L 41 19 L 41 37 L 39 37 L 39 19 z M 7.8457031 39 L 18 39 L 22 39 L 42.154297 39 C 42.588676 39 43 39.394792 43 40 L 43 41 L 7 41 L 7 40 C 7 39.394792 7.411324 39 7.8457031 39 z M 4.8457031 43 L 45.154297 43 C 45.588676 43 46 43.394792 46 44 L 46 45 L 4 45 L 4 44 C 4 43.394792 4.411324 43 4.8457031 43 z'
							></path></svg
						>
					</Label>
					<Label title='India | Remote'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/knileshh/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				Avid learner, passionate about Computer Science and Engineering, learning about advanced data structure and algorithms, loves to build solutions for real life problems. <br>Full Stack developer.
			</p>
		</Section>
		{
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Internships'>
			<Card
				heading='Boardly'
				headingHref='https://boardly.in/landing'
				subheading='Backend Dev - Team lead'
				date='Dec 2024 - Feb 2025'
				imagePath='/src/assets/boardly.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Led a cross-functional team of 4 developers to launch Boardly platform within one week.
					</li>
					<li>
						Developed scalable MERN stack backend with Multer for file uploads and Cloudinary for storage optimization.
					</li>
					<li>
						Implemented JWT-based authentication middleware ensuring secure resource access and data protection.
					</li>
					<li>
						Created structured Git workflow with branch management for efficient feature development and deployment.
					</li>
					<li>
						Integrated RazorPay payment gateway to enable subscription-based premium features and monetization.
					</li>
				</ul>
			</Card>
			<Card
				heading='KeyNcoders'
				headingHref='https://keyncoders.com/'
				subheading='Backend Dev Intern'
				date='Aug 2024 - Nov 2024'
				imagePath='/src/assets/kk.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
			<ul class='ml-4 list-disc text-muted-foreground'>
				<li>
					Engineered Docker-containerized video encoding service converting video files to .m3u8 format for HLS streaming.
				</li>
				<li>
					Optimized API performance by implementing rate limiting, request validation, and efficient route handling.
				</li>
				<li>
					Evaluated and implemented AWS S3 cloud storage solution after comparing price and performance metrics across providers.
				</li>
				<li>
					Utilized memory buffers and temporary storage to handle files in constrained environments such as Vercel deployments.
				</li>
			</ul>
			</Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='VIT Vellore'
				subheading='Master of Computer Applications'
				date='Jul 2024 - Jul 2026'
				imagePath='/src/assets/vit2.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
			</Card>
			<Card
				heading='L.N. Mishra Institute'
				subheading='Bachelor of Computer Applications'
				date='Nov 2021 - Apr 2024'
				imagePath='/src/assets/lnmi.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			></Card>
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://www.google.com'
					heading='Self Hosted Email Server'
					subheading='Configured and deployed complete email server solution with advance security measures.'
					imagePath='/src/assets/selfhosted.png'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					as='div'
					heading='Custom Linux Environment'
					subheading='Built lightweight, performance-optimized Linux desktop using Arch and dwm window manager.'
					imagePath='/src/assets/customlinux.png'
					altText='Lorem, ipsum dolor sit'
					class='w-full sm:w-1/2'
				/>
				
			</div>
		</Section>

		<Section title='Certificates'>
			<Card
				as='a'
				heading='ByteVerse NIT Patna Annual Hackathon'
				subheading='Among top 20 shortlisted teams out of 1000 participating teams for the in house rounds at NIT Patna.'
				date='Arp 2023'
				imagePath='/src/assets/nit.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
				href='https://verification.givemycertificate.com/v/5d576ec3-34c4-4fd5-929d-36754059f7bf'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
	<a
		href='https://monkeytype.com/profile/itsmek'
		class='mt-16 flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md group'
	>
		<span class='relative flex items-center justify-center'>
			<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-400 group-hover:text-green-500 transition-colors duration-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" class="animate-[zap_1.5s_cubic-bezier(0.4,0,0.2,1)_infinite]"></path>
			</svg>
			<span class="absolute inset-0 bg-green-400/20 rounded-full blur-sm group-hover:bg-green-500/20 transition-colors duration-300 animate-[pulse_3s_cubic-bezier(0.4,0,0.2,1)_infinite]"></span>
		</span>

		<p class='font-medium group-hover:text-green-500 transition-colors duration-300'>100+ WPM </p>
	</a>
	<style>
		@keyframes zap {
			0%, 100% {
				transform: scale(1) rotate(0deg);
				opacity: 1;
			}
			25% {
				transform: scale(1.1) rotate(-5deg);
				opacity: 0.9;
			}
			50% {
				transform: scale(1.2) rotate(5deg);
				opacity: 0.8;
			}
			75% {
				transform: scale(1.1) rotate(-5deg);
				opacity: 0.9;
			}
		}
		@keyframes pulse {
			0%, 100% {
				transform: scale(1);
				opacity: 0.2;
			}
			50% {
				transform: scale(1.8);
				opacity: 0.3;
			}
		}
	</style>
</PageLayout>
